<Page x:Class="GridScroller.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:GridScroller"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <ScrollViewer>
    <Grid>
      <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <local:cmpGridScroller x:Name="gsDates" Width="180" Height="100"
              Background="LightBlue"
              BorderBrush="CornflowerBlue"
              BorderThickness="5"
              CornerRadius="7"
              AutomationProperties.AutomationId="GridScroller"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10">
            <local:cmpGridScroller.Items>
                        <CheckBox Content="Item 1" />
                        <CheckBox Content="Item 2" />
                        <CheckBox Content="Item 3" />
                        <CheckBox Content="Item 4" />
                    </local:cmpGridScroller.Items>
        </local:cmpGridScroller>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
